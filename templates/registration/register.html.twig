{% extends 'base.html.twig' %}
{% block title %}Inscription - SecureChat{% endblock %}
{% block stylesheet %}
	<link href="dist/img/favicon.png" type="image/png" rel="icon">
	<link rel="stylesheet" href="dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="dist/css/perfect-scrollbar.min.css">
	<link rel="stylesheet" href="dist/css/themify-icons.css">
	<link rel="stylesheet" href="dist/css/emoji.css">
	<link rel="stylesheet" href="dist/css/style.css">
	<link rel="stylesheet" href="dist/css/responsive.css">
{% endblock %}
{% block body %}
	<main>
		<div class="layout">
			<div class="sign-bg">
				<div class="start">
					<div class="container">
						<div class="row d-flex justify-content-center">
							<div class="col-md-6 col-lg-4">
								<div class="register-content">
									<div class="login-header">
										<div class="logo">
											<img src="dist/img/logo2.png" alt="">
										</div>
										<h1>
											<i class="ti-key"></i>Inscription</h1>
									</div>
									{{ form_start(form, {'attr': {'class': 'login-up'}}) }}
									<div class="form-group">
										{{ form_widget(form.username) }}
										<button class="btn icon">
											<i class="ti-user"></i>
										</button>
									</div>
									<div class="form-group">
										{{ form_widget(form.email) }}
										<button class="btn icon">
											<i class="ti-email"></i>
										</button>
									</div>
									<div class="form-group">
										{{ form_widget(form.plainPassword.first) }}
										<button class="btn icon">
											<i class="ti-lock"></i>
										</button>
									</div>
									<div class="form-group">
										{{ form_widget(form.plainPassword.second) }}
										<button class="btn icon">
											<i class="ti-lock"></i>
										</button>
									</div>
									<button type="submit" class="btn button">S'enregistrer</button>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
{% block javascripts %}
	<script src="dist/js/jquery3.3.1.js"></script>
	<script src="dist/js/vendor/jquery-slim.min.js"></script>
	<script src="dist/js/vendor/popper.min.js"></script>
	<script src="dist/js/bootstrap.min.js"></script>
	<script src="dist/js/perfect-scrollbar.min.js"></script>
	<script src="dist/js/script.js"></script>
{% endblock %}

